                                          Content="{materialDesign:PackIcon VolumeOff}">
                                    </Button>

                                    <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromLeft}">
                                        <Slider 
                                             x:Name="Volume4" 
                                             Width="100" 
                                             Height="30" 
                                             Maximum="1"
                                             Value="1"
                                             Foreground="#0099FF"
                                             Visibility="Visible"
                                             VerticalAlignment="Bottom"
                                             HorizontalAlignment="Center">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="ValueChanged">
                                                    <i:InvokeCommandAction Command="{Binding Source={StaticResource GenreSongVM},Path= ChangeVolumn}"
                                                                       CommandParameter="{Binding ElementName=Main}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Slider>
                                    </materialDesign:TransitioningContent>
                                </StackPanel>

                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                    Margin="380,0,0,0" 
                                    Width="652"
