                                      Background="Transparent"
                                      IsEnabled="False"
                                      Foreground="#444444"
                                      BorderBrush="Transparent"/>
                                </materialDesign:TransitioningContent>
                                <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromBottom,Duration=0:0:0.9}">
                                    <ToggleButton
                                            x:Name="SequencecyLoop4"
                                            Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                            IsChecked="True"
                                            Margin="0,0,5,0"
                                            Command="{Binding Source={StaticResource GenreSongVM},Path=ShuffleDisabled}"
                                            CommandParameter="{Binding ElementName=Main}"
                                            Foreground="#444444"
                                            Background="#0099FF"
                                                >
                                        <materialDesign:PackIcon
                                                Kind="ShuffleDisabled"
                                                Height="21"
                                                Width="21" />
                                    </ToggleButton>
                                </materialDesign:TransitioningContent>
                                <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromBottom,Duration=0:0:1}">

                                    <ToggleButton
                                            x:Name="OneLoop4"
                                            Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                            IsChecked="False"
                                            Margin="0,0,5,0"
                                            Command="{Binding Source={StaticResource GenreSongVM},Path= Loop}"
                                            CommandParameter="{Binding ElementName=Main}"
                                            Foreground="#444444"
                                            Background="#0099FF">
                                        <materialDesign:PackIcon
                                                Kind="Loop"
                                                Height="21"
                                                Width="21" />
                                    </ToggleButton>
                                </materialDesign:TransitioningContent>
                            </StackPanel>
                        </Grid>
                    </materialDesign:TransitioningContent>
                </StackPanel>

            </Grid>
        </Grid>
    </Grid>
</Window>
