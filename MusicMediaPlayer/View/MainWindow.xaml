                                                <i:EventTrigger EventName="ValueChanged">
                                                    <i:InvokeCommandAction Command="{Binding Source={StaticResource GenreSongVM},Path=ChangeTime}"
                                                                           CommandParameter="{Binding ElementName=Main}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>

                                        </Slider>
                                    </materialDesign:TransitioningContent>
                                </StatusBarItem>
                                <StackPanel Orientation="Horizontal"
                                            Margin="-100,0,0,0">
                                    <Label
                                        Height="25"
                                        x:Name="InTime4"
                                        Foreground="#333333"
                                        Margin="320,-20,0,0"></Label>
                                    <Label
                                        Height="25"
                                        x:Name="TotalTime4"
                                        Foreground="#333333"
                                        Margin="450,-20,0,0"></Label>
