                                <StackPanel Orientation="Horizontal"
                                        Margin="800,0,0,0">
                                    <Button
                                          x:Name="SpeakerHigh4"
                                          Width="50"
                                          Background="Transparent"
                                          Foreground="#333333"
                                          BorderThickness="0"
                                          Command="{Binding Source={StaticResource GenreSongVM},Path= Mute}"
                                          CommandParameter="{Binding ElementName=Main}"
                                          Content="{materialDesign:PackIcon VolumeHigh}">
                                    </Button>
                                    <Button
                                          x:Name="SpeakerMedium4"
                                          Width="50"
                                          Margin="-50,0,0,0"
                                          Visibility="Hidden"
                                          Background="Transparent"
                                          Foreground="#333333"
                                          BorderThickness="0"
                                          Command="{Binding Source={StaticResource GenreSongVM},Path=Mute}"
                                          CommandParameter="{Binding ElementName=Main}"
                                          Content="{materialDesign:PackIcon VolumeMedium}">
                                    </Button>
                                    <Button
                                          x:Name="SpeakerLow4"
                                          Width="50"
                                          Margin="-50,0,0,0"
                                          Visibility="Hidden"
                                          Background="Transparent"
                                          Foreground="#333333"
                                          BorderThickness="0"
                                          Command="{Binding Source={StaticResource GenreSongVM},Path= Mute}"
                                          CommandParameter="{Binding ElementName=Main}"
                                          Content="{materialDesign:PackIcon VolumeLow}">
                                    </Button>
                                    <Button
                                          x:Name="SpeakerOff4"
                                          Width="50"
                                          Margin="-50,0,0,0"
                                          Visibility="Hidden"
                                          Background="Transparent"
                                          Foreground="#333333"
                                          BorderThickness="0"
                                          Command="{Binding Source={StaticResource GenreSongVM},Path=NonMute}"
