                                                Width="21" />
                                    </ToggleButton>
                                </materialDesign:TransitioningContent>
                            </StackPanel>
                        </Grid>
                    </materialDesign:TransitioningContent>
                    <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=ExpandIn}">
                        <Grid x:Name="PlayerBarGenre" Margin="0,-100,0,0" Visibility="Hidden">
                            <Rectangle  Fill="AliceBlue"
                                        Margin="0,0,0,0"
                                        Height="100" Width="auto">
                            </Rectangle>
                            <Border Height="75"
                                    Width="75"
                                    CornerRadius="10"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Margin="10,05,0,0">
                                <Border.Background>
                                    <ImageBrush Stretch="UniformToFill"
                                                ImageSource="{Binding Source={StaticResource GenreSongVM},Path=SelectedItem.ImageSongBinary,Converter={StaticResource ByteToImageConverter}}"></ImageBrush>
                                </Border.Background>
                            </Border>
                            <StackPanel Orientation="Vertical"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left"
                                        Margin="95,15,0,0">
                                <TextBlock Text="{Binding Source={StaticResource GenreSongVM}, Path=SelectedItem.SongTitle}"
                                           Foreground="#333333"
                                           FontSize="28"
                                           FontWeight="Medium"/>
                                <TextBlock Text="{Binding Source={StaticResource GenreSongVM}, Path=SelectedItem.Artist}"
                                           Foreground="#333333"
                                           FontWeight="DemiBold"
                                           FontSize="16"/>
                            </StackPanel>
                            <StackPanel 
                                    Margin="200,10,0,0"
                                    Width="auto">
                                <StatusBarItem HorizontalContentAlignment="Stretch"
                                           Width="600">
                                    <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=ExpandIn}">
                                        <Slider Name="sliProgress4" 
                                                Foreground="#0099FF"
                                                Width="400"
                                                IsEnabled="False"
                                                Margin="-60,0,0,0"
