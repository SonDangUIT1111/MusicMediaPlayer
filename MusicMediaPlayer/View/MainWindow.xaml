                                <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromBottom,Duration=0:0:0.4}">

                                    <Button
                                      Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                      Height="35"
                                      Width="35"
                                      Margin="50,0,0,0"
                                      Foreground="#444444"
                                      Background="Transparent"
                                      BorderBrush="Transparent"
                                      Command="{Binding Source={StaticResource GenreSongVM},Path=OpenSleepTimer}"
                                      CommandParameter="{Binding ElementName=Main}">
                                        <materialDesign:PackIcon
                                                            Kind="Alarm"
                                                            Height="24"
                                                            Width="24" />
                                    </Button>
                                </materialDesign:TransitioningContent>

                                <ToggleButton
                                            x:Name="RandomLoop4"
                                            Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                            IsChecked="False"
                                            Margin="10,0,5,0"
                                            Background="#0099FF"
                                            Command="{Binding Source={StaticResource GenreSongVM},Path=ShuffleVariant}"
                                            CommandParameter="{Binding ElementName=Main}"
                                                >
                                    <materialDesign:PackIcon
                                                Kind="ShuffleVariant"
                                                Height="21"
                                                Width="21"
                                                Foreground="#444444"/>
                                </ToggleButton>
                                <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromBottom,Duration=0:0:0.5}">
                                    <Button
                                      x:Name="SkipPreviousbtn4"
                                      Command="{Binding Source={StaticResource GenreSongVM}, Path=SkipPrevious}"
