                                      Background="Transparent"
                                      Foreground="#444444"
                                      IsEnabled="False"
                                      BorderBrush="Transparent"/>
                                </materialDesign:TransitioningContent>
                                <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromBottom,Duration=0:0:0.6}">
                                    <ToggleButton
                                          x:Name="Play4"
                                          Command="{Binding Source={StaticResource GenreSongVM},Path= Play}"  
                                          CommandParameter="{Binding ElementName=Main}"
                                          Margin="0,0,0,0"
                                          Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                          Content="{materialDesign:PackIcon Play}"
                                          Background="Transparent"
                                          Foreground="#444444"
                                          BorderBrush="Transparent"
                                          IsEnabled="False"/>
                                </materialDesign:TransitioningContent>
                                <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromBottom,Duration=0:0:0.7}">
                                    <ToggleButton
                                          x:Name="Pause4"
                                          Command="{Binding Source={StaticResource GenreSongVM},Path= Pause}"
                                          CommandParameter="{Binding ElementName=Main}"
                                          Margin="-40,0,0,0"
                                          Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                          Content="{materialDesign:PackIcon Pause}"
                                          Visibility="Hidden"
                                          Background="Transparent"
                                          Foreground="#444444"
                                          BorderBrush="Transparent"
                                          IsEnabled="False"/>
                                </materialDesign:TransitioningContent>
                                <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromBottom,Duration=0:0:0.8}">
                                    <Button
                                      x:Name="SkipNextbtn4"     
