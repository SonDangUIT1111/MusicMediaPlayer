<Window x:Class="MusicMediaPlayer.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MusicMediaPlayer.ViewModel"
        xmlns:local="clr-namespace:MusicMediaPlayer"
        mc:Ignorable="d"
        xmlns:view="clr-namespace:MusicMediaPlayer.UserControlMusic"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Background="Transparent"
        ResizeMode="NoResize"
        Title="Music Player" 
        Height="800" Width="1225"
        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        Icon="IconApp.ico"
        Name="Main"
        >

    <Window.DataContext>
        <vm:MainViewModel></vm:MainViewModel>
    </Window.DataContext>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedTurnOnLogin}"
                                   CommandParameter="{Binding ElementName=Main}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1211*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="750"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" 
                  Panel.ZIndex="1">
                <view:UserControl1/>
            </Grid>
            <Border CornerRadius="20" BorderBrush="Transparent"
                    BorderThickness="0"
                    Grid.ColumnSpan="5" 
                    Grid.RowSpan="2">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="White"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Grid Grid.Row="1">
                <StackPanel>
                    <Grid x:Name="MainViewProgram">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                            <ColumnDefinition Width="0"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0"
                              Background="Transparent"
                              Margin="0 5 0 0">
                            <Border CornerRadius="20"  
                                    Background="Transparent"
                                    Grid.Column="1">
                                <Grid>
                                    <Border CornerRadius="0 30 0 20" Background="#0099FF" Margin="0,0,0,10">

                                    </Border>
                                    <StackPanel>
                                        <RadioButton Style="{StaticResource MainButton}" 
                                        Width="140" 
                                        Command="{Binding SwitchHome}" 
                                        CommandParameter="{Binding ElementName=FrameView}"
                                                     Margin="0 20 0 0">
                                            <Grid>
                                                <TextBlock Text= "Home" 
                                                   TextAlignment="Center"
                                                           
                                                           />
                                                <iconPacks:PackIconMaterial x:Name="Icon" Kind="HomeVariant" 
                                                                             
                                                                            Height="15" 
                                                                            Width="20" 
                                                                            Margin="20 0 0 0"
                                                                            >
                                                    <iconPacks:PackIconMaterial.Foreground>
                                                        <LinearGradientBrush>
                                                            <GradientStop Color="#FFF0DD" Offset="0.05"></GradientStop>
                                                            <GradientStop Color="Salmon" Offset="0.6"></GradientStop>
                                                        </LinearGradientBrush>
                                                    </iconPacks:PackIconMaterial.Foreground>
                                                </iconPacks:PackIconMaterial>
                                            </Grid>
                                        </RadioButton>

                                        <Grid Background="#0099FF" Margin="0 20 0 0">
                                            <TextBlock Text="Library"
                                                   FontSize="24"
                                                   Foreground="#FFFFFF"
                                                   FontWeight="SemiBold"
                                                   FontStyle="Italic"
                                                   Margin="20,0,0,0"                                                  
                                                   />
                                        </Grid>
                                        <!--<Border BorderBrush="#FFFFFF"
                                                BorderThickness="1"
                                                Margin="0,0,0,0"/>-->
                                        <RadioButton Style="{StaticResource MainButton}"  
                                                Width="140"
                                                Command="{Binding SwitchMySong}"
                                                CommandParameter="{Binding ElementName=FrameView}"
                                                     Margin="0 20 0 0">
                                            <Grid>
                                                <TextBlock Text= "My Song" 
                                                           TextAlignment="Center"
                                                           />
                                                <iconPacks:PackIconMaterial Kind="Music" 
                                                                            
                                                                            Margin="15,0,0,0"
                                                                            RenderTransformOrigin="0.763,1.3" 
                                                                            Height="16" 
                                                                            Width="25">
                                                    <iconPacks:PackIconMaterial.Foreground>
                                                        <LinearGradientBrush>
                                                            <GradientStop Color="#98FB91" Offset="0.35"></GradientStop>
                                                            <GradientStop Color="#00FF77" Offset="0.6"></GradientStop>
                                                        </LinearGradientBrush>
                                                    </iconPacks:PackIconMaterial.Foreground>
                                                </iconPacks:PackIconMaterial>
                                            </Grid>
                                        </RadioButton>
                                        <RadioButton Style="{StaticResource MainButton}"  
                                                Width="140"
                                                Command="{Binding SwitchMyPlayList}"
                                                CommandParameter="{Binding ElementName=FrameView}"
                                                     Margin="0 15 0 0">
                                            <Grid>
                                                <TextBlock Text= "My Playlist" 
                                                           TextAlignment="Center"
                                                           Margin="10 0 0 0"/>
                                                <iconPacks:PackIconMaterial Kind="Heart" 
                                                                                                        
                                                                            Height="16" Width="28" 
                                                                            VerticalAlignment="Center"
                                                                            Margin="14 0 0 0">
                                                    <iconPacks:PackIconMaterial.Foreground>
                                                        <LinearGradientBrush>
                                                            <GradientStop Color="#FFD3DE" Offset="0.18"></GradientStop>
                                                            <GradientStop Color="#FF7DA7" Offset="0.6"></GradientStop>
                                                        </LinearGradientBrush>
                                                    </iconPacks:PackIconMaterial.Foreground>
                                                </iconPacks:PackIconMaterial>
                                            </Grid>
                                        </RadioButton>
                                        <Grid Margin="0 20 0 0">
                                            <TextBlock Text="Discover"
                                                   FontSize="24"
                                                       FontWeight="SemiBold"
                                                       FontStyle="Italic"
                                                   Foreground="#FFFFFF"
                                                   Margin="20,0,0,0"/>
                                        </Grid>

                                        <RadioButton Style="{StaticResource MainButton}"  
                                                Width="140"
                                                Command="{Binding SwitchArtist}"
                                                CommandParameter="{Binding ElementName=FrameView}"
                                                     Margin="0 20 0 0">
                                            <Grid>
                                                <TextBlock Text= "Artist" 
                                                           TextAlignment="Center"/>
                                                <iconPacks:PackIconMaterial Kind="Artstation" 
                                                                                                                                
                                                                            Height="16" Width="28" 
                                                                            VerticalAlignment="Center"
                                                                            Margin="15 0 0 0">
                                                    <iconPacks:PackIconMaterial.Foreground>
                                                        <LinearGradientBrush>
                                                            <GradientStop Color="#F2F5D0" Offset="0.15"></GradientStop>
                                                            <GradientStop Color="#F9957F" Offset="0.6"></GradientStop>
                                                        </LinearGradientBrush>
                                                    </iconPacks:PackIconMaterial.Foreground>
                                                </iconPacks:PackIconMaterial>
                                            </Grid>
                                        </RadioButton>
                                        <RadioButton Style="{StaticResource MainButton}"  
                                                Width="140" 
                                                Command="{Binding SwitchAlbum}"
                                                CommandParameter="{Binding ElementName=FrameView}"
                                                     Margin="0 15 0 0">
                                            <Grid>
                                                <TextBlock Text= "Album" 
                                                           TextAlignment="Center"/>
                                                <iconPacks:PackIconMaterial Kind="Book" 
                                                                                                                  
                                                                            Height="16" Width="28" 
                                                                            VerticalAlignment="Center"
                                                                            Margin="15 0 0 0">
                                                    <iconPacks:PackIconMaterial.Foreground>
                                                        <LinearGradientBrush>
                                                            <GradientStop Color="#FDF5A6" Offset="0.15"></GradientStop>
                                                            <GradientStop Color="#B88746" Offset="0.65"></GradientStop>
                                                        </LinearGradientBrush>
                                                    </iconPacks:PackIconMaterial.Foreground>
                                                </iconPacks:PackIconMaterial>
                                            </Grid>
                                        </RadioButton>
                                        <RadioButton Style="{StaticResource MainButton}"  
                                                Width="140" 
                                                Command="{Binding SwitchGenre}"
                                                CommandParameter="{Binding ElementName=FrameView}"
                                                     Margin="0 15 0 0">
                                            <Grid>
                                                <TextBlock Text= "Genre" 
                                                           TextAlignment="Center"/>
                                                <iconPacks:PackIconMaterial Kind="InstrumentTriangle" 
                                                                                                                                                      
                                                                            Height="16" Width="28" 
                                                                            VerticalAlignment="Center"
                                                                            Margin="15 0 0 0">
                                                    <iconPacks:PackIconMaterial.Foreground>
                                                        <LinearGradientBrush>
                                                            <GradientStop Color="#D380FA" Offset="0.25"></GradientStop>
                                                            <GradientStop Color="#6B00D7" Offset="0.65"></GradientStop>
                                                        </LinearGradientBrush>
                                                    </iconPacks:PackIconMaterial.Foreground>
                                                </iconPacks:PackIconMaterial>
                                            </Grid>
                                        </RadioButton>
                                        <Grid Margin="0 20 0 0">
                                            <TextBlock Text="Account"
                                                   FontSize="24"
                                                       FontWeight="SemiBold"
                                                       FontStyle="Italic"
                                                   Foreground="#FFFFFF"
                                                   Margin="20,0,0,0"/>
                                        </Grid>

                                        <RadioButton Style="{StaticResource MainButton}" 
                                                Command="{Binding SwitchProfile}" 
                                                CommandParameter="{Binding ElementName=FrameView}"
                                                Width="140" Margin="0 20 0 0" 
                                                BorderBrush="Transparent">
                                            <Grid>
                                                <TextBlock Text= "Profile" 
                                                           TextAlignment="Center"/>
                                                <iconPacks:PackIconMaterial  Kind="Account" 
                                                                     
                                                                     Height="16" 
                                                                     Width="20"                                                                      
                                                                     VerticalAlignment="Center"
                                                                     Margin="15 0 0 0">
                                                    <iconPacks:PackIconMaterial.Foreground>
                                                        <LinearGradientBrush>
                                                            <GradientStop Color="#DBE9F5" Offset="0.195"></GradientStop>
                                                            <GradientStop Color="#2C5D87" Offset="0.65"></GradientStop>
                                                        </LinearGradientBrush>
                                                    </iconPacks:PackIconMaterial.Foreground>
                                                </iconPacks:PackIconMaterial>
                                            </Grid>
                                        </RadioButton>

                                        <RadioButton Style="{StaticResource MainButton}" 
                                                Width="130"  
                                                Height="38" 
                                                Margin="0 45 0 0"
                                                Command="{Binding LoadedTurnOnLogin}"
                                                CommandParameter="{Binding ElementName=Main}">
                                            <Grid>
                                                <TextBlock Text= "Log out" 
                                                           TextAlignment="Center"
                                                           />
                                                <iconPacks:PackIconMaterial Kind="Logout" 
                                                                            Foreground="Black" 
                                                                            Margin="15 0 0 0"
                                                                            Height="17" Width="28" 
                                                                            VerticalAlignment="Center"/>
                                            </Grid>
                                        </RadioButton>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                        <Grid Grid.Column="2"
                              Background="Transparent"
                              Margin="10 5 5 5"
                              Height="auto">
                            <Border 
                                    Background="Transparent"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <!--<ColumnDefinition Width="61*"/>-->
                                    <ColumnDefinition Width="1000"/>
                                </Grid.ColumnDefinitions>
                                <Frame x:Name="FrameView"
                                       Height="auto"
                                       Width="1000"
                                       MinHeight="750"
                                       NavigationUIVisibility="Hidden" Grid.ColumnSpan="2"
                               />
                            </Grid>
                        </Grid>
                    </Grid>
                    <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=ExpandIn}">
                        <Grid x:Name="PlayerBar" Margin="0,0,0,0" Visibility="Hidden">
                            <Rectangle  Fill="AliceBlue"
                                        Margin="0,0,0,0"
                                        Height="100" Width="auto">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding  Source={StaticResource SongVM},Path= ShowTopOrCD}"
                                                               CommandParameter="{Binding ElementName=Main}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Rectangle>
                            <Border Height="75"
                                    Width="75"
                                    CornerRadius="10"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Margin="10,05,0,0">
                                <Border.Background>
                                    <ImageBrush Stretch="UniformToFill"
                                                ImageSource="{Binding Source={StaticResource SongVM},Path=SelectedItem.ImageSongBinary,Converter={StaticResource ByteToImageConverter}}"></ImageBrush>
                                </Border.Background>
                            </Border>
                            <StackPanel Orientation="Vertical"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left"
                                        Margin="95,15,0,0">
                                <TextBlock Text="{Binding Source={StaticResource SongVM}, Path=SelectedItem.SongTitle}"
                                           Foreground="#333333"
                                           FontSize="28"
                                           FontWeight="Medium"/>
                                <TextBlock Text="{Binding Source={StaticResource SongVM}, Path=SelectedItem.Artist}"
                                           Foreground="#333333"
                                           FontWeight="DemiBold"
                                           FontSize="16"/>
                            </StackPanel>
                            <StackPanel 
                                    Margin="200,10,0,0"
                                    Width="auto">
                                <StatusBarItem HorizontalContentAlignment="Stretch"
                                           Width="600">
                                    <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=ExpandIn}">
                                        <Slider Name="sliProgress" 
                                                Foreground="#0099FF"
                                                Width="400"
                                                IsEnabled="False"
                                                Margin="-60,0,0,0"
                                     >
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="ValueChanged">
                                                    <i:InvokeCommandAction Command="{Binding Source={StaticResource SongVM},Path=ChangeTime}"
                                                                           CommandParameter="{Binding ElementName=Main}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>

                                        </Slider>
                                    </materialDesign:TransitioningContent>
                                </StatusBarItem>
                                <StackPanel Orientation="Horizontal"
                                            Margin="-100,0,0,0">
                                    <Label
                                        Height="25"
                                        x:Name="InTime"
                                        Foreground="#333333"
                                        Margin="320,-20,0,0"></Label>
                                    <Label
                                        Height="25"
                                        x:Name="TotalTime"
                                        Foreground="#333333"
                                        Margin="450,-20,0,0"></Label>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                        Margin="800,0,0,0">
                                    <Button
                                          x:Name="SpeakerHigh"
                                          Width="50"
                                          Background="Transparent"
                                          Foreground="#333333"
                                          BorderThickness="0"
                                          Command="{Binding Source={StaticResource SongVM},Path= Mute}"
                                          CommandParameter="{Binding ElementName=Main}"
                                          Content="{materialDesign:PackIcon VolumeHigh}">
                                    </Button>
                                    <Button
                                          x:Name="SpeakerMedium"
                                          Width="50"
                                          Margin="-50,0,0,0"
                                          Visibility="Hidden"
                                          Background="Transparent"
                                          Foreground="#333333"
                                          BorderThickness="0"
                                          Command="{Binding Source={StaticResource SongVM},Path=Mute}"
                                          CommandParameter="{Binding ElementName=Main}"
                                          Content="{materialDesign:PackIcon VolumeMedium}">
                                    </Button>
                                    <Button
                                          x:Name="SpeakerLow"
                                          Width="50"
                                          Margin="-50,0,0,0"
                                          Visibility="Hidden"
                                          Background="Transparent"
                                          Foreground="#333333"
                                          BorderThickness="0"
                                          Command="{Binding Source={StaticResource SongVM},Path= Mute}"
                                          CommandParameter="{Binding ElementName=Main}"
                                          Content="{materialDesign:PackIcon VolumeLow}">
                                    </Button>
                                    <Button
                                          x:Name="SpeakerOff"
                                          Width="50"
                                          Margin="-50,0,0,0"
                                          Visibility="Hidden"
                                          Background="Transparent"
                                          Foreground="#333333"
                                          BorderThickness="0"
                                          Command="{Binding Source={StaticResource SongVM},Path=NonMute}"
                                          CommandParameter="{Binding ElementName=Main}"
                                          Content="{materialDesign:PackIcon VolumeOff}">
                                    </Button>

                                    <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromLeft}">
                                        <Slider 
                                             x:Name="Volume" 
                                             Width="100" 
                                             Height="30" 
                                             Maximum="1"
                                             Value="1"
                                             Foreground="#0099FF"
                                             Visibility="Visible"
                                             VerticalAlignment="Bottom"
                                             HorizontalAlignment="Center">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="ValueChanged">
                                                    <i:InvokeCommandAction Command="{Binding Source={StaticResource SongVM},Path= ChangeVolumn}"
                                                                       CommandParameter="{Binding ElementName=Main}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </Slider>
                                    </materialDesign:TransitioningContent>
                                </StackPanel>

                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                    Margin="380,0,0,0" 
                                    Width="652"
                                    Panel.ZIndex="2">
                                <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromBottom,Duration=0:0:0.4}">

                                    <Button
                                      Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                      Height="35"
                                      Width="35"
                                      Margin="50,0,0,0"
                                      Foreground="#444444"
                                      Background="Transparent"
                                      BorderBrush="Transparent"
                                      Command="{Binding Source={StaticResource SongVM},Path=OpenSleepTimer}"
                                      CommandParameter="{Binding ElementName=Main}">
                                        <materialDesign:PackIcon
                                                            Kind="Alarm"
                                                            Height="24"
                                                            Width="24" />
                                    </Button>
                                </materialDesign:TransitioningContent>

                                <ToggleButton
                                            x:Name="RandomLoop"
                                            Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                            IsChecked="False"
                                            Margin="10,0,5,0"
                                            Background="#0099FF"
                                            Command="{Binding Source={StaticResource SongVM},Path=ShuffleVariant}"
                                            CommandParameter="{Binding ElementName=Main}"
                                                >
                                    <materialDesign:PackIcon
                                                Kind="ShuffleVariant"
                                                Height="21"
                                                Width="21"
                                                Foreground="#444444"/>
                                </ToggleButton>
                                <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromBottom,Duration=0:0:0.5}">
                                    <Button
                                      x:Name="SkipPreviousbtn"
                                      Command="{Binding Source={StaticResource SongVM}, Path=SkipPrevious}"
                                      CommandParameter="{Binding ElementName=Main}"
                                      Margin="0,0,5,0"
                                      Content="{materialDesign:PackIcon SkipPrevious}"
                                      Background="Transparent"
                                      Foreground="#444444"
                                      IsEnabled="False"
                                      BorderBrush="Transparent"/>
                                </materialDesign:TransitioningContent>
                                <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromBottom,Duration=0:0:0.6}">
                                    <ToggleButton
                                          x:Name="Play"
                                          Command="{Binding Source={StaticResource SongVM},Path= Play}"  
                                          CommandParameter="{Binding ElementName=Main}"
                                          Margin="0,0,0,0"
                                          Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                          Content="{materialDesign:PackIcon Play}"
                                          Background="Transparent"
                                          Foreground="#444444"
                                          BorderBrush="Transparent"
                                          IsEnabled="False"/>
                                </materialDesign:TransitioningContent>
                                <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromBottom,Duration=0:0:0.7}">
                                    <ToggleButton
                                          x:Name="Pause"
                                          Command="{Binding Source={StaticResource SongVM},Path= Pause}"
                                          CommandParameter="{Binding ElementName=Main}"
                                          Margin="-40,0,0,0"
                                          Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                          Content="{materialDesign:PackIcon Pause}"
                                          Visibility="Hidden"
                                          Background="Transparent"
                                          Foreground="#444444"
                                          BorderBrush="Transparent"
                                          IsEnabled="False"/>
                                </materialDesign:TransitioningContent>
                                <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromBottom,Duration=0:0:0.8}">
                                    <Button
                                      x:Name="SkipNextbtn"     
                                      Command="{Binding Source={StaticResource SongVM},Path= SkipNext}"
                                      Margin="0,0,5,0"
                                      Content="{materialDesign:PackIcon SkipNext}"
                                      Background="Transparent"
                                      IsEnabled="False"
                                      Foreground="#444444"
                                      BorderBrush="Transparent"/>
                                </materialDesign:TransitioningContent>
                                <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromBottom,Duration=0:0:0.9}">
                                    <ToggleButton
                                            x:Name="SequencecyLoop"
                                            Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                            IsChecked="True"
                                            Margin="0,0,5,0"
                                            Command="{Binding Source={StaticResource SongVM},Path=ShuffleDisabled}"
                                            CommandParameter="{Binding ElementName=Main}"
                                            Foreground="#444444"
                                            Background="#0099FF"
                                                >
                                        <materialDesign:PackIcon
                                                Foreground="#444444"
                                                Kind="ShuffleDisabled"
                                                Height="21"
                                                Width="21" />
                                    </ToggleButton>
                                </materialDesign:TransitioningContent>
                                <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromBottom,Duration=0:0:1}">

                                    <ToggleButton
                                            x:Name="OneLoop"
                                            Style="{StaticResource MaterialDesignFlatPrimaryToggleButton}"
                                            IsChecked="False"
                                            Margin="0,0,5,0"
                                            Command="{Binding Source={StaticResource SongVM},Path= Loop}"
                                            CommandParameter="{Binding ElementName=Main}"
                                            Foreground="#444444"
                                            Background="#0099FF">
                                        <materialDesign:PackIcon
                                                Kind="Loop"
                                                Height="21"
                                                Width="21" />
                                    </ToggleButton>
                                </materialDesign:TransitioningContent>
                            </StackPanel>
                        </Grid>
                    </materialDesign:TransitioningContent>
                    <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=ExpandIn}">
                        <Grid x:Name="PlayerBarPlaylist" Margin="0,-100,0,0" Visibility="Hidden">
                            <Rectangle  Fill="AliceBlue"
                                        Margin="0,0,0,0"
                                        Height="100" Width="auto">
                            </Rectangle>
                            <Border Height="75"
                                    Width="75"
                                    CornerRadius="10"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Margin="10,05,0,0">
                                <Border.Background>
                                    <ImageBrush Stretch="UniformToFill"
                                                ImageSource="{Binding Source={StaticResource PlayList_InsideVM},Path=SelectedItem.ImageSongBinary,Converter={StaticResource ByteToImageConverter}}"></ImageBrush>
                                </Border.Background>
                            </Border>
                            <StackPanel Orientation="Vertical"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Left"
                                        Margin="95,15,0,0">
                                <TextBlock Text="{Binding Source={StaticResource PlayList_InsideVM}, Path=SelectedItem.SongTitle}"
                                           Foreground="#333333"
                                           FontSize="28"
                                           FontWeight="Medium"/>
                                <TextBlock Text="{Binding Source={StaticResource PlayList_InsideVM}, Path=SelectedItem.Artist}"
                                           Foreground="#333333"
                                           FontWeight="DemiBold"
                                           FontSize="16"/>
                            </StackPanel>
                            <StackPanel 
                                    Margin="200,10,0,0"
                                    Width="auto">
                                <StatusBarItem HorizontalContentAlignment="Stretch"
                                           Width="600">
                                    <materialDesign:TransitioningContent OpeningEffect="{materialDesign:TransitionEffect Kind=ExpandIn}">
                                        <Slider Name="sliProgress1" 
                                                Foreground="#0099FF"
                                                Width="400"
                                                IsEnabled="False"
                                                Margin="-60,0,0,0"
                                     >
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="ValueChanged">
                                                    <i:InvokeCommandAction Command="{Binding Source={StaticResource PlayList_InsideVM},Path=ChangeTime}"
                                                                           CommandParameter="{Binding ElementName=Main}"/>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>

                                        </Slider>
                                    </materialDesign:TransitioningContent>
                                </StatusBarItem>
                                <StackPanel Orientation="Horizontal"
                                            Margin="-100,0,0,0">
                                    <Label
                                        Height="25"
                                        x:Name="InTime1"
                                        Foreground="#333333"
                                        Margin="320,-20,0,0"></Label>
                                    <Label
                                        Height="25"
                                        x:Name="TotalTime1"
                                        Foreground="#333333"
                                        Margin="450,-20,0,0"></Label>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                        Margin="800,0,0,0">
                                    <Button
                                          x:Name="SpeakerHigh1"
                                          Width="50"
                                          Background="Transparent"
                                          Foreground="#333333"
                                          BorderThickness="0"
                                          Command="{Binding Source={StaticResource PlayList_InsideVM},Path= Mute}"
                                          CommandParameter="{Binding ElementName=Main}"
                                          Content="{materialDesign:PackIcon VolumeHigh}">
                                    </Button>
                                    <Button
                                          x:Name="SpeakerMedium1"
                                          Width="50"
                                          Margin="-50,0,0,0"
                                          Visibility="Hidden"
                                          Background="Transparent"
                                          Foreground="#333333"
                                          BorderThickness="0"
                                          Command="{Binding Source={StaticResource PlayList_InsideVM},Path=Mute}"
                                          CommandParameter="{Binding ElementName=Main}"
                                          Content="{materialDesign:PackIcon VolumeMedium}">
                                    </Button>
                                    <Button
                                          x:Name="SpeakerLow1"
                                          Width="50"
                                          Margin="-50,0,0,0"
                                          Visibility="Hidden"
