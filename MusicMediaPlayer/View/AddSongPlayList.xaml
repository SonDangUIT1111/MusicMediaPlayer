<Window x:Class="MusicMediaPlayer.View.AddSongPlayList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicMediaPlayer"
        mc:Ignorable="d"
        Title="AddSongPlayList" Height="450" Width="500"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        DataContext="{StaticResource AddSongPlayListVM}"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        Name="AddSongWD"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        >

    <i:Interaction.Triggers >
        <i:EventTrigger EventName = "Loaded" >
            <i:InvokeCommandAction Command = "{Binding Loaded}"
                                   CommandParameter = "{Binding ElementName=AddSongWD}" />
        </i:EventTrigger >
    </i:Interaction.Triggers >

    <Border CornerRadius="20"
            Background="White"
            BorderBrush="#0099FF"
            BorderThickness="3">
    <Grid>
            <StackPanel>
                <TextBlock Text="Add Songs"
                           FontWeight="SemiBold"
                           FontStyle="Italic"
                           FontSize="40"
                           TextAlignment="Center"
                           Margin="0 20 0 0">
                    
                </TextBlock>
                <ListView     
                      x:Name="listview"
                      ItemsSource="{Binding List}"
                      SelectionMode="Multiple"
                      Margin="20 20 20 0"
                      Height="275"
                     >

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Tên"
                                    Width="200"
                                    DisplayMemberBinding="{Binding SongTitle}"
                                        >

                            </GridViewColumn>
                            <GridViewColumn Header="Ca sĩ"
                                            Width="200"
                                    DisplayMemberBinding="{Binding Artist}"
                                       >

                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
                <StackPanel Orientation="Horizontal"
                            Margin="0 20 0 0">
                    <Button Margin="75 0 0 0"
                                Style="{StaticResource ButtonInAddPLWD}"
                                Width="100"
                                Height="40"
                                x:Name="btnAdd"
                                Command="{Binding Add}"
                                ToolTip="Add"
                                >
                        <materialDesign:PackIcon Kind="Check"
                                                     Width="25"
                                                     Height="25">

                        </materialDesign:PackIcon>
                    </Button>
                    <Button Margin="130 0 0 0"
                                Width="100"
                                Height="40"
                                Style="{StaticResource ButtonInAddPLWD}"
                                Command="{Binding Cancel}"
                            ToolTip="Cancel">
                        <materialDesign:PackIcon Kind="Close"
                                                     Width="25"
                                                     Height="25">

                        </materialDesign:PackIcon>
                    </Button>
                </StackPanel>

            </StackPanel>

            

        <!--<StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    >
            <Button Margin=" 100 10 10 10"
                    Content="Add"
                    Command="{Binding Add}">

            </Button>
            <Button Margin="130 10 100 10"
                    Content="Cancel"
                    Command="{Binding Cancel}">

            </Button>
        </StackPanel>-->
    </Grid>
    </Border>
</Window>
