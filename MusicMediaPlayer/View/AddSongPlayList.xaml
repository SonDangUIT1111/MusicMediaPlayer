<Window x:Class="MusicMediaPlayer.AddSongPlayList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicMediaPlayer"
        mc:Ignorable="d"
        Title="AddSongPlayList" Height="450" Width="500"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        DataContext="{StaticResource AddSongPlayListVM}"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Beige"
        Name="AddSongWD"
        >

    <i:Interaction.Triggers >
        <i:EventTrigger EventName = "Loaded" >
            <i:InvokeCommandAction Command = "{Binding Loaded}"
                                   CommandParameter = "{Binding ElementName=AddSongWD}" />
        </i:EventTrigger >
    </i:Interaction.Triggers >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <ListView     Grid.Row="0"
                      x:Name="listview"
                      ItemsSource="{Binding List}"
                      SelectionMode="Multiple"
                     >

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Tên"
                                    Width="300"
                                    DisplayMemberBinding="{Binding SongTitle}"
                                        >

                    </GridViewColumn>
                    <GridViewColumn Header="Ca sĩ"
                                    DisplayMemberBinding="{Binding Artist}"
                                       >

                    </GridViewColumn>
                </GridView>
            </ListView.View>

        </ListView>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    >
            <Button Margin=" 100 10 10 10"
                    Content="Add"
                    Command="{Binding Add}">

            </Button>
            <Button Margin="130 10 100 10"
                    Content="Cancel"
                    Command="{Binding Cancel}">

            </Button>
        </StackPanel>
    </Grid>
</Window>
