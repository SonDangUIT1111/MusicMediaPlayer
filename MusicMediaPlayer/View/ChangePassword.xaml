<Window x:Class="MusicMediaPlayer.View.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicMediaPlayer.View"
        xmlns:vm="clr-namespace:MusicMediaPlayer.ViewModel"
        mc:Ignorable="d"
        Height="480" Width="400" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" WindowStyle="None"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        WindowStartupLocation="CenterScreen"
        x:Name="ChangePassWindow"
        DataContext="{StaticResource ProfileVM}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <Border CornerRadius="20" Grid.RowSpan="3">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#F5F7F6" Offset="0.3"/>
                    <GradientStop Color="#0099FF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <!--<Border CornerRadius="20">
                    <Border.Background>
                        <ImageBrush ImageSource="\Image\Sky.jpg" 
                                    Opacity="0.4"/>
                    </Border.Background>
                </Border>-->
            </Grid>
        </Border>
        <TextBlock Grid.Row="0" Text="Change Password" FontWeight="SemiBold" Foreground="#111111" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Grid Grid.Row="1">
            <StackPanel>
                <TextBlock Width="120" 
                           Height="40" 
                           Margin="50,10,0,0" 
                           Text="Current Pass" 
                           Foreground="#111111"
                           FontSize="18" HorizontalAlignment="Left" 
                           VerticalAlignment="Top"></TextBlock>
                <PasswordBox Width="300" 
                         Height="40" 
                         materialDesign:HintAssist.Hint="Enter current password" 
                         Foreground="#000000" 
                             x:Name="Password">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PasswordChanged">
                            <i:InvokeCommandAction Command="{Binding PasswordChangedCommand}"
                                   CommandParameter="{Binding ElementName=Password}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </PasswordBox>
                <TextBlock Width="120" 
                           Height="40" 
                           Margin="50,10,0,0" 
                           Text="New Pass" Foreground="#111111"
                           FontSize="18" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Top"></TextBlock>
                <PasswordBox Width="300" 
                         Height="40" 
                         materialDesign:HintAssist.Hint="Enter new password" 
                         Foreground="#000000" 
                             x:Name="NewPass"
                             >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PasswordChanged">
                            <i:InvokeCommandAction Command="{Binding NewPassChangedCommand}"
                                   CommandParameter="{Binding ElementName=NewPass}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </PasswordBox>
                <TextBlock Width="170" Height="40" 
                           Margin="50,10,0,0" 
                           Text="Confirm New Pass" 
                           Foreground="#111111" FontSize="18" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Top"></TextBlock>
                <PasswordBox Width="300" 
                         Height="40" 
                         materialDesign:HintAssist.Hint="Confirm new password"
                         Foreground="#000000" 
                             x:Name="ConfirmPass"
                         >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PasswordChanged">
                            <i:InvokeCommandAction Command="{Binding ConfirmChangedCommand}"
                                   CommandParameter="{Binding ElementName=ConfirmPass}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </PasswordBox>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <Button Style="{StaticResource Changepass}"
                    Width="100" 
                    Margin="70,10,230,30" 
                    Command="{Binding Confirm}">
                <Grid >
                    <TextBlock Text= "Confirm" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center" 
                               FontWeight="SemiBold"/>
                </Grid>
            </Button>
            <Button Style="{StaticResource Changepass}" Width="100" Margin="230,15,70,35" Command="{Binding CancelCommand}" CommandParameter="{Binding ElementName=ChangePassWindow}">
                <Grid >
                    <TextBlock Text= "Exit" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                </Grid>
            </Button>
        </Grid>
    </Grid>
</Window>
